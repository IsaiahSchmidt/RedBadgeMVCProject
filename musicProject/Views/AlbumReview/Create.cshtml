@model musicProject.Models.AlbumReviewModels.AlbumReviewCreate

@{
    ViewData["Title"] = "Create";
}

<div id="create" class="container">
    <form method="post" asp-action="Create">
        <input asp-for="@Model.UserId" hidden />
        <div class="form-group">
            <label for="AlbumId">Album</label>
            <select id="createInput" asp-for="AlbumId" asp-items="ViewBag.AlbumId" class="form-control"></select>
        </div>
        <div class="form-group">
            <label for="Rating">Rating</label>
            <input id="createInput" asp-for="Rating" type="number" class="form-control" name="Rating" placeholder="1-10" />
        </div>
        <div class="form-group">
            <label for="Content">Content</label>
            <input id="createInput" type="text" class="form-control" name="Content" placeholder="your thoughts..." />
        </div>
        <button id="reviewButton" type="submit" class="btn btn-primary btn-block mt-2">Create</button>
    </form>
</div>