@model IEnumerable<musicProject.Models.AlbumReviewModels.AlbumReviewListItem>

<h1>Album Reviews</h1>

<a asp-action="Create" asp-controller="AlbumReview" class="text-primary">Review An Album</a> |
<a asp-action="MyAlbumReviews" asp-controller="AlbumReview" class="text-primary">My Album Reviews</a>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>Album </th>
            <th>User</th>
            <th>Rating</th>
            <th>Content</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var album in Model)
        {
            <tr>
                <td>@album.AlbumTitle</td>
                <td>@album.User.UserName</td>
                <td>@album.Rating</td>
                <td><a asp-controller="AlbumReview" asp-action="Detail" asp-route-id="@album.Id">Details</a> </td>
            </tr>
        }
    </tbody>
</table>