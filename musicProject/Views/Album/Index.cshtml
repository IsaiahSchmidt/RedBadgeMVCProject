@model IEnumerable<musicProject.Models.AlbumModels.AlbumListItem>

<h1 class="text-center">All Albums</h1>
<a asp-action="Create" asp-controller="Album" class="text-primary">Create An Album</a>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>Title</th>
            <th>Artist</th>
            <th>Released</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var album in Model)
        {
            <tr>
                <td>@album.Title</td>
                <td>@album.Artist</td>
                <td>@album.Released</td>
                <td>@album.Genre</td>
            </tr>
        }
    </tbody>
</table>